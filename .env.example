# Database
DATABASE_URL="postgresql://username:password@localhost:5432/proconnect_dev"

# Redis
REDIS_URL="redis://localhost:6379"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-change-this"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Next Auth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-change-this"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"
OPENAI_ORGANIZATION_ID="your-org-id-optional"

# Vector Database (Choose one)
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="your-pinecone-environment"
PINECONE_INDEX_NAME="proconnect-vectors"

# Or ChromaDB
CHROMA_SERVER_URL="http://localhost:8000"
CHROMA_COLLECTION_NAME="proconnect-embeddings"

# Email Service
EMAIL_FROM="noreply@proconnect.ai"
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASSWORD="your-sendgrid-api-key"

# File Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes

# Security
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"
BCRYPT_ROUNDS="12"

# Bot Detection
RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"

# Frontend URLs
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:5000"
AI_ENGINE_URL="http://localhost:5001"

# Development
NODE_ENV="development"
LOG_LEVEL="debug"

# Port Configuration
PORT="5000"
AI_ENGINE_PORT="5001"
FRONTEND_PORT="3000"